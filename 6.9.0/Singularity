    cd /tmp 
    wget -nc https://github.com/johnkerl/miller/releases/download/v6.9.0/miller-6.9.0-linux-amd64.deb
    dpkg -i miller-6.9.0-linux-amd64.deb

%runscript
    mlr "$@"
